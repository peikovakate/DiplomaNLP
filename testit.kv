<SmallLabel@Label>:
	color: 0, 0, 0, 1
	size_hint: 1, 0.05
	bold: True

<NumberInput@TextInput>:
	input_filter: 'int'
	multiline: False
	size_hint: 0.3, None
	height: 30

<RunButton@Button>:
	background_color: .2196, .4667, .502, 1
	background_normal: ''
	size_hint: 1, None
	height: 30

<CheckChoice@BoxLayout>
	_text: ''
	CheckBox:
		color: 0,0,0,1
		size_hint: 0.1, 1
	Label:
		color: 0, 0, 0, 1
		text: root._text

<VerticalBox@BoxLayout>:
	orientation: 'vertical'

<Set@BoxLayout>
	orientation: 'horizontal'
	_text: ''
	Label:
		color: 0, 0, 0, 1
		text: root._text
	NumberInput:

<MainScreen>:
	id: main_screen
    BoxLayout:
    	# --- background color ---
        canvas.before:
			Color:
				rgb: .8588, .8314, .8275
			Rectangle:
            # self here refers to the widget i.e FloatLayout
				pos: self.pos
				size: self.size
		# ------------------------
        padding: 10

		# ------ input text ------
        VerticalBox:

        	SmallLabel:
        		text: 'Вхідний текст'
			RunButton:
				size_hint: None, None
				width: 150
				text: 'Відкрити файл'
				on_press: main_screen.load_file()
        	TextInput:

        		id: input_text

		# ------ settings ------
        StackLayout:
        	size_hint: None, 1
        	width: 250
        	orientation: 'lr-tb'
			padding: 15
        	SmallLabel:
        		text: 'Налаштування'

			VerticalBox:
				size_hint: 1, None
				height: 250
				Set:
					_text: 'Кількість завдань'
				Set:
					_text: 'Кількість варіантів'

				Label:
					color: 0, 0, 0, 1
					text: 'Типи завдань:'
				CheckChoice:
					_text: 'Один правильний варіант'
				CheckChoice:
					_text: 'Множинний вибір'
				CheckChoice:
					_text: 'Відкриті питання'
				CheckChoice:
					_text: 'Бінарні питання (Так/Ні)'

        	RunButton:
        		text: 'Сформувати питання'
				on_press: main_screen.generate_test()


		# ------ output text ------
		VerticalBox:
			SmallLabel:
				text: 'Згенеровані тести'
			RunButton:
				size_hint: None, None
				width: 150
        		text: 'Зберегти тести'
				on_press: main_screen.save_test()
        	TextInput:
				id: output_text
